FROM <%- image%>

ENV NODE_ENV=<%- node_env%>
ENV PORT=<%- port%>

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

RUN mkdir -p build
RUN chmod 777 build

RUN mkdir -p logs
RUN chmod 777 logs

ADD package.json package-lock.json ./

RUN npm install

COPY . .

RUN tree

EXPOSE <%- port %>

CMD [<%- cmd%>]
