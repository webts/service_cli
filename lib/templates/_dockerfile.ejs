FROM <%- image%>

ENV NODE_ENV=<%- node_env%>
ENV PORT=<%- port%>

RUN mkdir -p /usr/src/app

WORKDIR /usr/src/app

RUN mkdir -p build
RUN chmod 777 build

RUN mkdir -p logs
RUN chmod 777 logs

RUN mkdir -p node_modules
RUN chmod 777 node_modules

ADD package.json package-lock.json ./

COPY ./node_modules ./node_modules

COPY ./build ./build

EXPOSE <%- port %>

CMD [<%- cmd%>]
